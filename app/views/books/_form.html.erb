<%= form_for(@book) do |f| %>


  <div class="field">
    <%= f.label :title, "title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
  </div>
  
  <% if local_assigns[:edit_flag].present? %>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% else %>
   <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>

<% end %>
